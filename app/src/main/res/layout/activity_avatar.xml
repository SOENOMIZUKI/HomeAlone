<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D7F1F3"
    tools:context=".AvatarActivity">


    <Button
        android:id="@+id/btn"
        android:layout_width="142dp"
        android:layout_height="40dp"
        android:layout_marginTop="645dp"
        android:layout_marginBottom="250dp"
        android:text="登録"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.83"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/linearLayout"
        app:layout_constraintVertical_bias="0.58000004" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="30dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="42dp">

        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="181dp"
            android:layout_height="match_parent">

            <RadioButton
                android:id="@+id/radiobtn"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:text="ガボン" />

            <RadioButton
                android:id="@+id/radiobtn2"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:text="そらジロー" />

            <RadioButton
                android:id="@+id/radiobtn3"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:text="田中のおっさん" />

            <RadioButton
                android:id="@+id/radiobtn4"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:text="トトロ" />

            <RadioButton
                android:id="@+id/radiobtn5"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:text="堂江竜河" />
        </RadioGroup>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="100dp"
                android:layout_height="70dp"
                app:srcCompat="@drawable/gabon" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="100dp"
                android:layout_height="70dp"
                app:srcCompat="@drawable/soraziro" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="100dp"
                android:layout_height="70dp"
                app:srcCompat="@drawable/tanaka" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="100dp"
                android:layout_height="70dp"
                app:srcCompat="@drawable/totoro" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="100dp"
                android:layout_height="70dp"
                app:srcCompat="@drawable/doeryuga" />
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>